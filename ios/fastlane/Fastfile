default_platform(:ios)

platform :ios do
  desc "Build y subir a TestFlight"
  lane :beta do
    build_app(
      scheme: "Zenti",
      export_method: "app-store",
      export_options: {
        provisioningProfiles: {
          "com.teranov.zentiapp" => "match AppStore com.teranov.zentiapp"
        }
      }
    )
    upload_to_testflight
  end
end