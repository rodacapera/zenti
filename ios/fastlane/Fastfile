default_platform(:ios)

platform :ios do
  desc "Build y subir a TestFlight"
  lane :beta do
    build_app(
      scheme: "Zenti",
      export_method: "app-store",
      export_options: {
        signingStyle: "automatic"
      },
      export_xcargs: "-allowProvisioningUpdates"
    )
    upload_to_testflight
  end
end